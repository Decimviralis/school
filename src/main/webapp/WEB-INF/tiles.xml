<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

    <definition name="baseLayout" template="/pages/common/baseLayout.jsp">
        <put-attribute name="header" value="/pages/common/header.jsp"/>
        <put-attribute name="menu" value="/pages/common/menu.jsp" />
        <put-attribute name="body" />
        <put-attribute name="footer"   value="/pages/common/footer.jsp"/>
    </definition>

    <definition name="pupil" extends="baseLayout">
        <put-attribute name="body" value="/pages/pupil/content.jsp"/>
    </definition>

    <definition name="addPupil" extends="baseLayout">
        <put-attribute name="body" value="/pages/pupil/add.jsp" />
    </definition>

    <definition name="accountant" extends="baseLayout">
        <put-attribute name="body" value="/pages/accountant/content.jsp"/>
    </definition>

    <definition name="addAccountant" extends="baseLayout">
        <put-attribute name="body" value="/pages/accountant/add.jsp"/>
    </definition>

    <definition name="act" extends="baseLayout">
        <put-attribute name="body" value="/pages/act/content.jsp"/>
    </definition>

    <definition name="receipt" extends="baseLayout">
        <put-attribute name="body" value="/pages/receipt/content.jsp"/>
    </definition>

</tiles-definitions>